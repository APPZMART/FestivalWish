<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="4dp">


    <ImageView
        android:id="@+id/PhotoList"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:padding="0dp"
        android:scaleType="fitXY" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ToDownload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/PhotoList"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="10dp"
        android:background="@color/cardview_light_background"
        card_view:backgroundTint="@color/cardview_light_background"
        card_view:elevation="0dp"
        card_view:srcCompat="@drawable/ic_download" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ToShare"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/PhotoList"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:background="@color/cardview_shadow_end_color"
        card_view:backgroundTint="@color/cardview_light_background"
        card_view:elevation="0dp"
        card_view:srcCompat="@drawable/ic_share" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Towhatsapp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/PhotoList"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="0dp"
        android:background="@color/cardview_shadow_end_color"
        card_view:backgroundTint="@color/cardview_light_background"
        card_view:elevation="0dp"
        card_view:srcCompat="@drawable/whatsapp" />
</android.support.v7.widget.CardView>